<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.win_10.eurokegel.GameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.GridLayout
            android:layout_marginTop="10px"
            android:layout_marginStart="10px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            app:orientation="vertical"
            app:rowCount="6">

            <Button
                android:id="@+id/addPointToPlayerOne"
                android:layout_marginEnd="10px"
                android:layout_marginBottom="10px"
                android:background="@drawable/black_border_green"
                android:onClick="AddPointToPlayerOne_OnClick"
                android:text="@string/AddPoint"
                app:layout_column="0"
                app:layout_columnWeight="0.17"
                app:layout_row="3"
                app:layout_rowSpan="2"
                app:layout_rowWeight="0.15" />

            <Button
                android:id="@+id/removePointFromPlayerOne"
                android:layout_marginBottom="10px"
                android:layout_marginEnd="10px"
                android:background="@drawable/black_border_red"
                android:onClick="RemovePointFromPlayerOne_OnClick"
                android:text="@string/RemovePoint"
                app:layout_column="1"
                app:layout_columnWeight="0.17"
                app:layout_row="3"
                app:layout_rowSpan="1"
                app:layout_rowWeight="0.15" />

            <TextView
                android:id="@+id/playerOneName"
                android:layout_marginBottom="10px"
                android:layout_marginEnd="10px"
                android:background="@drawable/black_border_white"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLength="13"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_columnWeight="0.34"
                app:layout_row="0"
                app:layout_rowWeight="0.20" />

            <TextView
                android:id="@+id/playerTwoName"
                android:layout_marginBottom="10px"
                android:layout_marginEnd="10px"
                android:background="@drawable/black_border_yellow"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLength="13"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_column="3"
                app:layout_columnSpan="2"
                app:layout_columnWeight="0.34"
                app:layout_row="0"
                app:layout_rowWeight="0.20" />


            <TextView
                android:id="@+id/playerOnePoint"
                android:layout_marginBottom="10px"
                android:layout_marginEnd="10px"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_rowSpan="2"
                app:layout_columnWeight="0.34"
                app:layout_row="1"
                app:layout_rowWeight="0.50" />

            <TextView
                android:id="@+id/SetStandTextView"
                android:layout_marginBottom="10px"
                android:layout_marginEnd="10px"
                android:background="@drawable/black_border_darkgrey"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_column="2"
                app:layout_columnWeight="0.30"
                app:layout_row="0"
                app:layout_rowWeight="0.20" />

            <TextView
                android:id="@+id/playerTwoPoint"
                android:layout_marginBottom="10px"
                android:layout_marginEnd="10px"
                android:gravity="fill"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_column="3"
                app:layout_columnSpan="2"
                app:layout_rowSpan="2"
                app:layout_columnWeight="0.34"
                app:layout_row="1"
                app:layout_rowWeight="0.50" />

            <Button
                android:id="@+id/addPointToPlayerTwo"
                android:background="@drawable/black_border_green"
                android:onClick="AddPointToPlayerTwo_OnClick"
                android:layout_marginBottom="10px"
                android:layout_marginEnd="10px"
                android:text="@string/AddPoint"
                app:layout_column="4"
                app:layout_columnWeight="0.17"
                app:layout_row="3"
                app:layout_rowSpan="2"
                app:layout_rowWeight="0.15" />

            <Button
                android:id="@+id/removePointFromPlayerTwo"
                android:layout_marginBottom="10px"
                android:layout_marginEnd="10px"
                android:background="@drawable/black_border_red"
                android:onClick="RemovePointFromPlayerTwo_OnClick"
                android:text="@string/RemovePoint"
                app:layout_column="3"
                app:layout_columnWeight="0.17"
                app:layout_row="3"
                app:layout_rowSpan="1"
                app:layout_rowWeight="0.15" />

            <Button
                android:id="@+id/giveUpPlayerOne"
                android:layout_marginBottom="10px"
                android:layout_marginEnd="10px"
                android:background="@drawable/black_border_green"
                android:onClick="GiveUpPlayerOne_OnClick"
                android:text="@string/GiveUp"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_columnWeight="0.17"
                app:layout_row="4"
                app:layout_rowWeight="0.15" />

            <TextView
                android:id="@+id/differenceTextView"
                android:textAlignment="center"
                android:layout_marginEnd="10px"
                android:gravity="center_vertical"
                android:layout_marginBottom="10px"
                android:textColor="@android:color/black"
                android:background="@drawable/black_border_darkgrey"
                android:textStyle="bold"
                android:maxLines="1"
                app:layout_column="2"
                app:layout_columnSpan="1"
                app:layout_rowSpan="2"
                app:layout_columnWeight="0.30"
                app:layout_row="1"
                app:layout_rowWeight="0.30" />

            <TextView
                android:id="@+id/historyTextView"
                android:background="@drawable/black_border_darkgrey"
                android:maxLines="4"
                android:layout_marginEnd="10px"
                android:layout_marginBottom="10px"
                android:scrollbars="vertical"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_column="2"
                app:layout_columnWeight="0.30"
                app:layout_row="3"
                app:layout_rowSpan="2"
                app:layout_rowWeight="0.17" />

            <Button
                android:id="@+id/giveUpPlayerTwo"
                android:layout_marginBottom="10px"
                android:layout_marginEnd="10px"
                android:background="@drawable/black_border_green"
                android:onClick="GiveUpPlayerTwo_OnClick"
                android:text="@string/GiveUp"
                app:layout_column="3"
                app:layout_columnSpan="1"
                app:layout_columnWeight="0.17"
                app:layout_row="4"
                app:layout_rowWeight="0.15" />

        </android.support.v7.widget.GridLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
