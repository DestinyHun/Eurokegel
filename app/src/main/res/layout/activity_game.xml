<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.win_10.eurokegel.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:weightSum="100">

                <TextView
                    android:id="@+id/playerOneName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="50"
                    android:clickable="true"
                    android:gravity="top"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/playerTwoName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="50"
                    android:background="?attr/colorError"
                    android:backgroundTint="?attr/colorError"
                    android:clickable="true"
                    android:gravity="top"
                    android:textAlignment="center" />

            </TableRow>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:orientation="horizontal"
            android:weightSum="100">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-30dp"
                android:layout_weight="100"
                android:weightSum="100">

                <TextView
                    android:id="@+id/playerOnePoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="27"
                    android:gravity="top"
                    android:clickable="true"
                    android:text="0"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/playerPointSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:gravity="top"
                    android:text="-"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/playerTwoPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="27"
                    android:gravity="top"
                    android:clickable="true"
                    android:text="0"
                    android:textAlignment="center" />

            </TableRow>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:layout_marginStart="15dp"
                android:weightSum="100">

                <Button
                    android:id="@+id/pointWhiteButton1"
                    android:layout_height="match_parent"
                    android:layout_weight="9.15"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/black_border"
                    android:text="@string/point1" />

                <Button
                    android:id="@+id/pointWhiteButton2"
                    android:layout_height="match_parent"
                    android:layout_weight="9.15"
                    android:layout_marginStart="4dp"
                    android:text="@string/point2" />

                <Button
                    android:id="@+id/pointWhiteButton3"
                    android:layout_height="match_parent"
                    android:layout_weight="9.15"
                    android:layout_marginStart="4dp"
                    android:text="@string/point3" />

                <Button
                    android:id="@+id/pointWhiteButton4"
                    android:layout_height="match_parent"
                    android:layout_weight="9.15"
                    android:layout_marginStart="4dp"
                    android:text="@string/point4" />

                <Button
                    android:id="@+id/pointWhiteButton5"
                    android:layout_height="match_parent"
                    android:layout_weight="9.15"
                    android:layout_marginStart="4dp"
                    android:text="@string/point5" />

                <Button
                android:id="@+id/pointWhiteButton6"
                android:layout_height="match_parent"
                android:layout_weight="9.15"
                android:layout_marginStart="4dp"
                android:text="@string/point6" />

                <Button
                    android:id="@+id/pointWhiteButton7"
                    android:layout_height="match_parent"
                    android:layout_weight="9.15"
                    android:layout_marginStart="4dp"
                    android:text="@string/point7" />

                <Button
                    android:id="@+id/pointWhiteButton8"
                    android:layout_height="match_parent"
                    android:layout_weight="9.15"
                    android:layout_marginStart="4dp"
                    android:text="@string/point8" />

                <Button
                    android:id="@+id/pointWhiteButton9"
                    android:layout_height="match_parent"
                    android:layout_weight="9.15"
                    android:layout_marginStart="4dp"
                    android:text="@string/point9" />

                <Button
                    android:id="@+id/pointWhiteButton10"
                    android:layout_height="match_parent"
                    android:layout_weight="9.15"
                    android:layout_marginStart="4dp"
                    android:text="@string/point10" />

                <Button
                    android:id="@+id/pointWhiteButton11"
                    android:layout_height="match_parent"
                    android:layout_weight="9.15"
                    android:layout_marginStart="4dp"
                android:text="@string/point11" />


            </TableRow>

        </LinearLayout>

        <TextView
            android:id="@+id/copyRight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="bottom"
            android:text="@string/textview_copyright"
            android:textAlignment="center" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
