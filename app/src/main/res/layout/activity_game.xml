<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.win_10.eurokegel.GameActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:orientation="vertical"
        android:layout_weight="100"
        app:rowCount="6">

        <Button
            android:id="@+id/addPointToPlayerOne"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_rowSpan="2"
            app:layout_columnWeight="10"
            app:layout_rowWeight="75"
            android:layout_marginEnd="10dp"
            android:background="@drawable/black_border_green"
            android:onClick="AddPointToPlayerOne_OnClick"
            android:text="@string/AddPoint" />

        <Button
            android:id="@+id/removePointFromPlayerOne"
            app:layout_column="1"
            app:layout_row="3"
            app:layout_rowSpan="2"
            app:layout_columnWeight="10"
            app:layout_rowWeight="20"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/black_border_red"
            android:onClick="RemovePointFromPlayerOne_OnClick"
            android:text="@string/RemovePoint" />

        <android.support.v7.widget.GridLayout
            app:layout_column="1"
            app:layout_row="0"
            app:layout_columnSpan="5"
            app:layout_columnWeight="80"
            android:layout_marginBottom="10dp"
            app:layout_rowWeight="15"
            android:layout_weight="100">

        <TextView
            android:id="@+id/playerOneName"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_columnWeight="50"
            app:layout_rowWeight="100"
            android:layout_marginEnd="5dp"
            android:gravity="center_vertical"
            android:background="@drawable/black_border_white"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/playerTwoName"
                app:layout_column="1"
                app:layout_row="0"
                app:layout_columnWeight="50"
                app:layout_rowWeight="100"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/black_border_red"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

        </android.support.v7.widget.GridLayout>

        <TextView
            android:id="@+id/playerOnePoint"
            app:layout_column="2"
            app:layout_row="1"
            app:layout_columnWeight="50"
            app:layout_rowWeight="30"
            android:textAlignment="center"
            android:gravity="top"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/playerPointSeparator"
            app:layout_column="3"
            app:layout_row="1"
            app:layout_columnWeight="10"
            app:layout_rowWeight="10"
            android:gravity="center_vertical"
            android:text="@string/dash_sign"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/playerTwoPoint"
            app:layout_column="4"
            app:layout_row="1"
            app:layout_columnWeight="50"
            app:layout_rowWeight="10"
            android:textAlignment="center"
            android:gravity="top"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addPointToPlayerTwo"
            app:layout_column="5"
            app:layout_row="1"
            app:layout_rowSpan="2"
            app:layout_columnWeight="10"
            app:layout_rowWeight="75"
            android:layout_marginStart="10dp"
            android:background="@drawable/black_border_green"
            android:onClick="AddPointToPlayerTwo_OnClick"
            android:text="@string/AddPoint" />

        <Button
            android:id="@+id/removePointFromPlayerTwo"
            app:layout_column="5"
            app:layout_row="3"
            app:layout_rowSpan="2"
            app:layout_columnWeight="10"
            app:layout_rowWeight="20"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/black_border_red"
            android:onClick="RemovePointFromPlayerTwo_OnClick"
            android:text="@string/RemovePoint" />

        <Space
            app:layout_column="2"
            app:layout_row="3"
            app:layout_columnWeight="10"
            app:layout_rowWeight="20"
            android:layout_marginEnd="10dp"
            />

        <Button
            android:id="@+id/newSet"
            app:layout_column="2"
            app:layout_row="4"
            app:layout_columnWeight="10"
            app:layout_rowWeight="10"
            android:layout_marginEnd="10dp"
            android:background="@drawable/black_border_green"
            android:onClick="NewSet_OnClick"
            android:text="@string/NewSet" />

        <TextView
            android:id="@+id/historyTextView"
            app:layout_column="3"
            app:layout_row="2"
            app:layout_rowSpan="3"
            app:layout_columnWeight="10"
            app:layout_rowWeight="10"
            android:textAlignment="center"
            android:background="@drawable/black_border_white"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/history"
            app:layout_column="4"
            app:layout_row="4"
            app:layout_columnWeight="10"
            app:layout_rowWeight="10"
            android:layout_marginStart="10dp"
            android:background="@drawable/black_border_green"
            android:onClick="History_OnClick"
            android:text="@string/History" />

        <TextView
            android:id="@+id/copyRight"
            app:layout_column="0"
            app:layout_row="5"
            app:layout_columnSpan="6"
            app:layout_columnWeight="100"
            app:layout_rowWeight="5"
            android:gravity="bottom"
            android:text="@string/textview_copyright"
            android:textAlignment="center" />

    </android.support.v7.widget.GridLayout>

</RelativeLayout>

</android.support.constraint.ConstraintLayout>
